{
  "parserOptions": {
    "parser": "babel-eslint",
  },
  "extends": [
    "@nuxtjs",
    "prettier",
    "prettier/vue",
    "plugin:prettier/recommended",
    "plugin:nuxt/recommended",
  ],
  "plugins": ["prettier"],
  "rules": {
    "vue/component-name-in-template-casing": ["error", "PascalCase"],
  
    "vue/comment-directive": 0,
    "linebreak-style": ["error", "windows"],
  },
  "globals": {
    "$nuxt": true,
  },
}
